{
  "name": "isp-manager-app",
  "version": "1.0.0",
  "description": "Aplicación móvil y desktop para el Sistema ISP",
  "main": "index.js",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "eject": "expo eject",
    "electron": "electron .",
    "electron:build": "electron-builder",
    "dev": "concurrently \"npm run start\" \"npm run electron\""
  },
  "dependencies": {
    "expo": "~50.0.0",
    "expo-status-bar": "~1.11.1",
    "react": "18.2.0",
    "react-native": "0.73.0",
    "react-native-web": "~0.19.6",
    "react-dom": "18.2.0",
    "@react-navigation/native": "^6.1.9",
    "@react-navigation/stack": "^6.3.20",
    "@react-navigation/bottom-tabs": "^6.5.11",
    "react-native-screens": "~3.29.0",
    "react-native-safe-area-context": "4.8.2",
    "axios": "^1.6.0",
    "@react-native-async-storage/async-storage": "1.21.0",
    "react-native-gesture-handler": "~2.14.0",
    "react-native-reanimated": "~3.6.1",
    "react-native-paper": "^5.11.0",
    "react-native-vector-icons": "^10.0.3",
    "react-native-chart-kit": "^6.12.0",
    "react-native-svg": "14.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@types/react": "~18.2.45",
    "typescript": "^5.1.3",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "ISP",
    "Internet Service Provider",
    "Mobile App",
    "Desktop App",
    "React Native",
    "Expo",
    "Electron"
  ],
  "author": "ISP Management System",
  "license": "MIT",
  "build": {
    "appId": "com.ispmanager.app",
    "productName": "ISP Manager",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.business"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
