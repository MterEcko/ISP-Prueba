# SERVER CONFIGURATION
NODE_ENV=development
PORT=3001
HOST=0.0.0.0

# DATABASE
# Opciones: sqlite | postgres
DB_DIALECT=sqlite

# SQLite (desarrollo/testing - más fácil para empezar)
SQLITE_PATH=./database.sqlite

# PostgreSQL (producción - recomendado para deployment)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=isp_store
DB_USER=postgres
DB_PASSWORD=your_password_here

# JWT SECRETS
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# CORS
ALLOWED_ORIGINS=http://localhost:8080,http://localhost:3000

# FILE UPLOADS
MAX_FILE_SIZE=52428800
UPLOAD_PATH=./uploads/plugins

# LICENSE GENERATION
LICENSE_MASTER_KEY=ISP-PRUEBA-MASTER-2025-ENTERPRISE-UNLIMITED

# TELEMETRY
TELEMETRY_ENABLED=true
TELEMETRY_INTERVAL=300000
GPS_TRACKING_ENABLED=true

# RATE LIMITING
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# LOGGING
LOG_LEVEL=info
LOG_FILE=./logs/store.log

# CLOUDFLARE CONFIGURATION
# Required for subdomain creation functionality
CLOUDFLARE_API_KEY=your-cloudflare-api-key
CLOUDFLARE_EMAIL=your-cloudflare-email@example.com
CLOUDFLARE_ZONE_ID=your-cloudflare-zone-id
CLOUDFLARE_DOMAIN=yourdomain.com

# STORE API CONFIGURATION
# URL base para comunicación con sistemas ISP clientes
STORE_API_URL=https://store.yourcompany.com
STORE_API_SECRET=your-store-api-secret-key-change-this

# LICENSE VALIDATION
# Frequency for license validation checks
LICENSE_VALIDATION_ENABLED=true
LICENSE_VALIDATION_INTERVAL=weekly
GPS_UPDATE_INTERVAL=weekly
METRICS_REPORT_INTERVAL=daily

# EMAIL CONFIGURATION
# Para envío de licencias a clientes
EMAIL_HOST=smtp.ionos.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@yourdomain.com
EMAIL_PASSWORD=your-email-password
EMAIL_FROM_NAME=ISP Store
EMAIL_FROM_ADDRESS=noreply@yourdomain.com
# Plantilla de email para licencias
EMAIL_TEMPLATE_LICENSE_SUBJECT=Tu licencia de ISP-Prueba
EMAIL_TEMPLATE_LICENSE_ENABLED=true
