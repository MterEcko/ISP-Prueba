# SERVER CONFIGURATION
NODE_ENV=development
PORT=3001
HOST=0.0.0.0

# DATABASE
# Opciones: sqlite | postgres
DB_DIALECT=sqlite

# SQLite (desarrollo/testing - más fácil para empezar)
SQLITE_PATH=./database.sqlite

# PostgreSQL (producción - recomendado para deployment)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=isp_store
DB_USER=postgres
DB_PASSWORD=your_password_here

# JWT SECRETS
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# CORS
ALLOWED_ORIGINS=http://localhost:8080,http://localhost:3000

# FILE UPLOADS
MAX_FILE_SIZE=52428800
UPLOAD_PATH=./uploads/plugins

# LICENSE GENERATION
LICENSE_MASTER_KEY=ISP-PRUEBA-MASTER-2025-ENTERPRISE-UNLIMITED

# TELEMETRY
TELEMETRY_ENABLED=true
TELEMETRY_INTERVAL=300000
GPS_TRACKING_ENABLED=true

# RATE LIMITING
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# LOGGING
LOG_LEVEL=info
LOG_FILE=./logs/store.log
