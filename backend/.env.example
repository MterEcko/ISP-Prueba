# Backend Environment Variables
# Copia este archivo a .env y configura según tu entorno

# ====================================
# CONFIGURACIÓN DE SERVIDOR
# ====================================

# Puerto del servidor backend
PORT=3000

# Entorno (development | production)
NODE_ENV=development

# ====================================
# CONFIGURACIÓN DE BASE DE DATOS
# ====================================

# Dialecto de base de datos (sqlite | postgres)
DB_DIALECT=sqlite

# Si usas SQLite:
DB_STORAGE=./database.sqlite

# Si usas PostgreSQL:
# DB_HOST=localhost
# DB_PORT=5432
# DB_USERNAME=isp_user
# DB_PASSWORD=tu_password_seguro
# DB_NAME=isp_database

# ====================================
# CONFIGURACIÓN DE JWT
# ====================================

JWT_SECRET=tu_secret_super_seguro_cambiame_en_produccion
JWT_EXPIRATION=86400

# ====================================
# CONFIGURACIÓN DE CORS
# ====================================

# Dominios permitidos (separados por coma)
# Para desarrollo local:
CORS_ORIGIN=http://localhost:8080,http://127.0.0.1:8080

# Para producción (agregar tu dominio e IP local):
# CORS_ORIGIN=http://localhost:8080,http://10.10.0.121:8080,https://ISP.serviciosqbit.net

# ====================================
# CONFIGURACIÓN DE MIKROTIK
# ====================================

# Modo mock (true para pruebas sin hardware real)
MIKROTIK_MOCK_MODE=true

# ====================================
# CONFIGURACIÓN DE JOBS AUTOMÁTICOS
# ====================================

# Habilitar facturación automática
ENABLE_BILLING_JOBS=false

# Habilitar segmentación automática de clientes
ENABLE_SEGMENTATION_JOBS=false

# ====================================
# CONFIGURACIÓN DE CORREO SMTP
# ====================================

SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=tu_email@gmail.com
SMTP_PASSWORD=tu_password_de_aplicacion

# ====================================
# CONFIGURACIÓN DE SERVIDOR DE CORREO PERSONALIZADO
# ====================================

# Tipo de servidor de correo (external | local)
MAIL_SERVER_TYPE=external

# Si usas servidor externo (contratado):
MAIL_SERVER_URL=https://mail.serviciosqbit.net
MAIL_SERVER_API_KEY=tu_api_key

# Si usas servidor local (incluido en el software):
# MAIL_SERVER_TYPE=local
# MAIL_SERVER_PORT=8025
# MAIL_DOMAIN=serviciosqbit.net

# ====================================
# CONFIGURACIÓN DE WEBHOOKS (n8n)
# ====================================

N8N_WEBHOOK_URL=
WEBHOOKS_ENABLED=false

# ====================================
# CONFIGURACIÓN DE TELEGRAM
# ====================================

TELEGRAM_BOT_TOKEN=
TELEGRAM_ENABLED=false

# ====================================
# CONFIGURACIÓN DE WHATSAPP
# ====================================

WHATSAPP_API_URL=
WHATSAPP_API_TOKEN=
WHATSAPP_ENABLED=false

# ====================================
# CONFIGURACIÓN DE TWILIO (SMS/WhatsApp)
# ====================================

# Twilio Credentials (obtener en https://console.twilio.com)
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=tu_twilio_auth_token

# Número de Twilio para SMS (formato E.164: +523311234567)
TWILIO_PHONE_NUMBER=+523311234567

# Número de Twilio para WhatsApp (sandbox: whatsapp:+14155238886, o tu número aprobado)
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886

# Habilitar recordatorios automáticos
ENABLE_AUTOMATIC_REMINDERS=true

# Nota: Para usar WhatsApp, debes:
# 1. Crear cuenta en Twilio (https://www.twilio.com)
# 2. Obtener Account SID y Auth Token del dashboard
# 3. Comprar un número de teléfono para SMS
# 4. Para WhatsApp sandbox: enviar "join <código>" al +1 (415) 523-8886
# 5. Para WhatsApp producción: solicitar aprobación de número de negocio

# ====================================
# CONFIGURACIÓN DE PASARELAS DE PAGO
# ====================================

# PayPal
PAYPAL_CLIENT_ID=
PAYPAL_CLIENT_SECRET=
PAYPAL_MODE=sandbox

# Stripe
STRIPE_PUBLIC_KEY=
STRIPE_SECRET_KEY=

# MercadoPago
MERCADOPAGO_PUBLIC_KEY=
MERCADOPAGO_ACCESS_TOKEN=

# ====================================
# CONFIGURACIÓN DE VIDEOLLAMADAS
# ====================================

# Servidor Jitsi (dejar vacío para usar meet.jit.si público)
JITSI_SERVER_URL=https://meet.jit.si
# O usar servidor propio:
# JITSI_SERVER_URL=https://meet.serviciosqbit.net

# JWT para Jitsi (si usas servidor propio con autenticación)
# JITSI_APP_ID=
# JITSI_APP_SECRET=
