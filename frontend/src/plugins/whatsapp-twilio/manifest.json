{
  "id": "whatsapp-twilio",
  "name": "WhatsApp Twilio",
  "slug": "whatsapp-twilio",
  "version": "1.0.0",
  "description": "Integración de WhatsApp mediante Twilio para envío y recepción de mensajes",
  "longDescription": "Conecta tu negocio con WhatsApp usando Twilio. Envía notificaciones, recibe mensajes de clientes, gestiona conversaciones y automatiza respuestas. Ideal para soporte al cliente y notificaciones de servicios.",
  "author": "ISP-Prueba Team",
  "category": "communication",
  "price": 29.99,
  "isFree": false,
  "tags": ["whatsapp", "twilio", "messaging", "chat", "notifications"],
  "features": [
    "Envío de mensajes de WhatsApp",
    "Recepción de mensajes (webhooks)",
    "Gestión de conversaciones",
    "Envío masivo de mensajes",
    "Soporte para multimedia (imágenes, documentos)",
    "Templates de mensajes",
    "Historial completo de conversaciones",
    "Integración con sistema de chat"
  ],
  "requirements": {
    "minVersion": "1.0.0",
    "requiredLicense": "premium"
  },
  "configuration": {
    "accountSid": {
      "type": "string",
      "label": "Account SID",
      "required": true,
      "secret": true,
      "description": "Account SID de Twilio (desde tu dashboard)"
    },
    "authToken": {
      "type": "string",
      "label": "Auth Token",
      "required": true,
      "secret": true,
      "description": "Auth Token de Twilio"
    },
    "phoneNumber": {
      "type": "string",
      "label": "Número de WhatsApp",
      "required": true,
      "description": "Tu número de WhatsApp Business (ej: +14155238886)",
      "placeholder": "+14155238886"
    },
    "webhookUrl": {
      "type": "string",
      "label": "Webhook URL",
      "required": false,
      "description": "URL pública para recibir webhooks (se genera automáticamente)"
    },
    "enableAutoResponse": {
      "type": "boolean",
      "label": "Habilitar respuestas automáticas",
      "default": false
    },
    "autoResponseMessage": {
      "type": "text",
      "label": "Mensaje de respuesta automática",
      "default": "Gracias por contactarnos. Un agente te responderá pronto."
    }
  },
  "webhookSupport": {
    "incoming": {
      "path": "/api/plugins/whatsapp-twilio/webhook",
      "method": "POST",
      "events": ["message.received", "status.updated"]
    }
  },
  "permissions": [
    "send_messages",
    "receive_messages",
    "manage_conversations",
    "access_client_data"
  ]
}
